{
	"name": "s-private",
	"version": "1.3.0",
	"author": "s-hirano-ist",
	"description": "Private pages and admin tool for s-hirano-ist.",
	"packageManager": "pnpm@9.6.0",
	"scripts": {
		"corepack": "corepack enable pnpm",
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"lint:fix": "next lint --fix",
		"lint:mark": "markdownlint-cli2 _markdown/*",
		"lint:mark:fix": "markdownlint-cli2-fix _markdown/*",
		"check:ci": "biome ci *",
		"check:fix": "biome check --write *",
		"test": "vitest",
		"test:e2e": "playwright test",
		"test:storybook": "test-storybook --coverage --coverageDirectory .storybook-coverage",
		"prisma:seed": "prisma db seed",
		"prisma:generate": "prisma generate",
		"prisma:migrate": "prisma migrate dev",
		"prisma:dev": "run-s -l prisma:generate prisma:migrate prisma:seed",
		"prisma:studio": "prisma studio",
		"postinstall": "prisma generate",
		"release:patch": "standard-version --release-as patch",
		"release:minor": "standard-version --release-as minor",
		"release:major": "standard-version --release-as major",
		"commit": "git-cz",
		"storybook": "storybook dev -p 6006",
		"storybook:build": "storybook build",
		"ui:diff": "shadcn-ui diff"
	},
	"prisma": {
		"seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
	},
	"dependencies": {
		"@biomejs/biome": "1.8.3",
		"@prisma/client": "5.17.0",
		"@radix-ui/react-dialog": "1.1.1",
		"@radix-ui/react-icons": "1.3.0",
		"@radix-ui/react-label": "2.1.0",
		"@radix-ui/react-select": "2.1.1",
		"@radix-ui/react-separator": "1.1.0",
		"@radix-ui/react-slot": "1.1.0",
		"@radix-ui/react-toast": "1.2.1",
		"@t3-oss/env-nextjs": "0.11.0",
		"@tailwindcss/typography": "0.5.13",
		"@tanstack/react-table": "8.19.3",
		"class-variance-authority": "0.7.0",
		"clsx": "2.1.1",
		"gray-matter": "4.0.3",
		"lucide-react": "0.417.0",
		"next": "14.2.5",
		"next-auth": "5.0.0-beta.19",
		"next-view-transitions": "0.3.0",
		"react": "18.3.1",
		"react-dom": "18.3.1",
		"recoil": "0.7.7",
		"tailwind-merge": "2.4.0",
		"tailwindcss-animate": "1.0.7",
		"unified": "11.0.5",
		"vaul": "0.9.1",
		"zod": "3.23.8"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^1.6.1",
		"@playwright/test": "1.45.2",
		"@storybook/addon-coverage": "1.0.4",
		"@storybook/addon-essentials": "8.2.5",
		"@storybook/addon-interactions": "8.2.5",
		"@storybook/addon-links": "8.2.5",
		"@storybook/addon-onboarding": "8.2.5",
		"@storybook/blocks": "8.2.5",
		"@storybook/nextjs": "8.2.5",
		"@storybook/react": "8.2.5",
		"@storybook/test": "8.2.5",
		"@storybook/test-runner": "0.19.1",
		"@testing-library/jest-dom": "6.4.6",
		"@testing-library/react": "16.0.0",
		"@types/node": "20.14.11",
		"@types/react": "18.3.3",
		"@types/react-dom": "18.3.0",
		"@vitejs/plugin-react": "4.3.1",
		"@vitest/coverage-v8": "2.0.3",
		"autoprefixer": "10.4.19",
		"eslint": "8.57.0",
		"eslint-config-next": "14.2.5",
		"eslint-plugin-storybook": "0.8.0",
		"eslint-plugin-tailwindcss": "3.17.4",
		"git-cz": "4.9.0",
		"jsdom": "24.1.0",
		"markdownlint-cli2": "0.13.0",
		"npm-run-all2": "6.2.2",
		"postcss": "8.4.39",
		"prisma": "5.17.0",
		"rehype": "13.0.1",
		"rehype-external-links": "3.0.0",
		"rehype-highlight": "7.0.0",
		"rehype-stringify": "10.0.0",
		"remark-gfm": "4.0.0",
		"remark-parse": "11.0.0",
		"remark-rehype": "11.1.0",
		"shadcn-ui": "0.8.0",
		"standard-version": "9.5.0",
		"storybook": "8.2.5",
		"tailwindcss": "3.4.6",
		"ts-node": "10.9.2",
		"typescript": "5.5.3",
		"vitest": "2.0.3"
	}
}
